
@model IEnumerable<U2A4.Models.Pelicula>
    @{
        Layout = "_Layout";

    }

    <div id="pelis">
        @foreach (var pelicula in Model)
        {
        <div>
            <a class="imgPelicula" href="~/peliculas/@pelicula.Nombre.Replace(" ","-")">
                <img src="~/images/portadas/@(pelicula.Id)_p.jpg" alt="Bichos">
            </a>
            <div class="nombrePelicula">
                <p>@pelicula.Nombre</p>
            </div>
        </div>
        }
    </div>



